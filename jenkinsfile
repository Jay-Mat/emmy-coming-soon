pipeline {
    agent any
        triggers {
            PollSCM * * * * *"
        }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
               sh 'npm install'
                sh 'npm build'
            }

        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'npm run test'
            }
        }