pipeline {
    agent any

    triggers {
        pollSCM '* * * * *'
    }
    environment {
        CI = false //do not treat errors as warnings
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'npm install'
                sh 'npm run build'
                sh 'docker login -u jaymath237 -p Jstorm237'
                sh 'docker build -t emmy-ride:${BUILD_NUMBER} .'
                sh 'docker tag emmy-ride:${BUILD_NUMBER} jaymath237'
                sh 'docker push emmy-ride:${BUILD_NUMBER}'
            }
        }
    }
}