pipeline {
    agent any

    triggers {
        pollSCM '* * * * *'
    }
    environment {
        CI = false //do not treat errors as warnings
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'npm install'
                sh 'npm run build'
                sh 'sudo docker login -u jaymath237 -p NUSTABRO1'
                sh 'docker build -t emmy-ride:v1 .'
                sh 'docker tag emmy-ride:v1 jaymath237/emmy-ride:v1'
                sh 'docker push jaymath237/emmy-ride:v1'
            }
        }
    }

}
