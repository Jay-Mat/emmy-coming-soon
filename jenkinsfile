pipeline {
    agent any
        triggers {
            PollSCM "* * * * *"
        }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
               sh "npm install
                    npm run build
                    "
            }

        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'npm run test'
            }
        }